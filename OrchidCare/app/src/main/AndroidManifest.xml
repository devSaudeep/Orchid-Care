<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saulo.orchidcare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.exa.MenuActivity" />
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".AddOrchidActivity" />
        <activity android:name=".MyGroveActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".MyGroveInfoActivity" />
        <activity android:name=".InfoActivity"></activity>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                    <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
    </application>
</manifest>
